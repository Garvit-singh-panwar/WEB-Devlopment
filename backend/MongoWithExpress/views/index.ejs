<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini Whatsapp</title>
    <link rel="stylesheet" href="./CSS/style.css">
</head>
<body>
    <h3>All chats!</h3>
    <form action="/chats/new" method="GET" >
        <button>New Chat</button>
    </form>
    <% for(let chat of chats){%>
        <div class="chat">

            <p>From: <%= chat.from %></p>
            <div class="msg">
                <p><%= chat.msg %></p>
                <form action="/chats/<%= chat._id %>/edit" method="GET">

                    <button>Edit</button>
                </form>
            </div>
            <p>Recived By: <%= chat.to %> </p>
            <hr/>
           
            <%= chat.created_at.toString().split(" ")[4] %> <br/>
            <%= chat.created_at.toString().split(" ").slice(0,4).join(" ") %> 
            <br/>

            <form action="/chats/<%= chat._id %>?_method=delete" method="post">

                <button>Delete</button>
            </form>
        </div>
        
        <br/><br/>

  <%}%>
</body>
</html>